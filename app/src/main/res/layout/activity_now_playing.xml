<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.dhrumilshah.musical.MainActivity"
        android:paddingBottom="@dimen/first_ll_padding_bottom">
        <TextView
            android:id="@+id/now_playing_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sajda"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/first_ll_textview1_margin_top"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/now_playing_song_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="contentDescription"
            tools:src="@drawable/my_name_is_khan"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/first_ll_imageview_margin_top"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/now_playing_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rahat Fateh Ali Khan, Shankaran Mahadevan &amp; Richa Sharma"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/first_ll_textview2_margin_top"/>
        <TextView
            android:id="@+id/now_playing_song_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="My Name is Khan"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/first_ll_textview3_margin_top"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/second_ll_margin_top">
            <ImageView
                android:id="@+id/backward_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="contentDescription"
                android:src="@drawable/backward_arrow"
                android:layout_marginEnd="@dimen/second_ll_imageview_margin_end"/>
            <ImageView
                android:id="@+id/play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="contentDescription"
                android:src="@drawable/play_arrow" />
            <ImageView
                android:id="@+id/forward_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="contentDescription"
                android:src="@drawable/forward_arrow"
                android:layout_marginStart="@dimen/second_ll_imageview_margin_start"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>