<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/album_image"
        android:layout_width="@dimen/album_image_width"
        android:layout_height="@dimen/album_image_height"
        tools:src="@drawable/singles"
        tools:ignore="ContentDescription"
        android:padding="@dimen/album_image_padding"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/album_second_ll_padding_start_end"
        android:paddingStart="@dimen/album_second_ll_padding_start_end">
        <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            tools:text="Singles"/>
        <TextView
            android:id="@+id/album_no_of_songs"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="4 songs"/>
    </LinearLayout>
</LinearLayout>